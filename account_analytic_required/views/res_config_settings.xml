<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_cabalcon_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.cabalcon.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='analytic']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="analytic_required">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Cuenta Analítica requerida</span>
                            <div class="text-muted">
                                Seleccione la política requerida para la Cuenta Analítica
                            </div>
                            <div class="text-muted">
                                <field name="account_analytic_select"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>