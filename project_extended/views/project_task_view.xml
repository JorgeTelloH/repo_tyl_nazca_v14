<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
       <record id="project_task_extended_tree" model="ir.ui.view">
            <field name="name">project.task.extended.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                	<field name="planned_hours" sum="Total Horas planificadas" optional="hide"/>
                    <field name="plan_ini_date" optional="hide"/>
                    <field name="plan_fin_date" optional="hide"/>
                    <field name="real_ini_date" optional="hide"/>
                    <field name="real_fin_date" optional="hide"/>
                    <field name="level"/>
                    <field name="task_type"/>
                    <field name="assigned_area"/>
                </xpath>
            </field>
        </record>

        <record id="project_task_extended_form" model="ir.ui.view">
            <field name="name">project.task.extended.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_deadline']" position="before">
                    <field name="plan_ini_date"/>
                    <field name="plan_fin_date"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="level"/>
                    <field name="task_type"/>
                    <field name="assigned_area"/>
                    <field name="real_ini_date"/>
                    <field name="real_fin_date"/>
                </xpath> 
            </field>
        </record>
    </data>
</odoo>















